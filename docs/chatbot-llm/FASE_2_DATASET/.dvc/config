# DVC Configuration â€” OKLA Chatbot Dataset Versioning

# ============================================================================

# R19 (MLOps): Data Version Control for reproducible dataset management.

#

# Setup:

# pip install dvc dvc-s3

# cd docs/chatbot-llm/FASE_2_DATASET

# dvc init --subdir

# dvc remote add -d okla-datasets s3://okla-mlops/datasets

# dvc add output/ # Track generated datasets

#

# Usage:

# dvc push # Upload dataset to remote

# dvc pull # Download dataset from remote

# dvc repro # Reproduce pipeline

# dvc metrics show # Show metrics

# dvc diff # Show changes since last commit

# ============================================================================

[core]
remote = okla-datasets
autostage = true

[remote "okla-datasets"]
url = s3://okla-mlops/datasets # For DigitalOcean Spaces (S3-compatible): # url = s3://okla-mlops-datasets # endpointurl = https://nyc3.digitaloceanspaces.com

[cache]
type = symlink
shared = group
