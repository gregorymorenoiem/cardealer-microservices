{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=25432;Database=RoleService;Username=postgres;Password=password"
  },
  "Database": {
    "Provider": "PostgreSQL",
    "ConnectionStrings": {
      "PostgreSQL": "Host=localhost;Port=25432;Database=RoleService;Username=postgres;Password=password"
    },
    "AutoMigrate": true,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "RateLimiting": {
    "Enabled": true,
    "MaxRequests": 1000,
    "WindowSeconds": 60,
    "EnableLogging": true,
    "WhitelistedIps": ["127.0.0.1", "::1", "localhost"]
  },
  "ElasticSearch": {
    "ConnectionString": "http://localhost:9200",
    "DefaultIndex": "Roles_dev",
    "Enable": false
  },
  "Jwt": {
    "Issuer": "cardealer-auth-dev",
    "Audience": "cardealer-services-dev",
    "Key": "development-jwt-secret-key-minimum-32-chars-long-for-testing!",
    "ExpirationMinutes": 120,
    "ValidateIssuer": false,
    "ValidateAudience": false,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "OpenTelemetry": {
    "ServiceName": "RoleService",
    "ServiceVersion": "1.0.0-dev",
    "OtlpEndpoint": "http://localhost:4317"
  }
}
