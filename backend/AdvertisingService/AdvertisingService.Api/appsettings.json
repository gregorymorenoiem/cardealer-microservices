{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=advertisingservice_db;Username=okla_admin;Password=okla_secret",
    "Redis": "redis:6379"
  },
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "UserName": "okla_admin",
    "Password": "okla_secret",
    "Port": 5672
  },
  "Audit": {
    "ServiceName": "AdvertisingService",
    "Enabled": true,
    "RabbitMq": {
      "Host": "rabbitmq",
      "Port": 5672,
      "Username": "okla_admin",
      "Password": "okla_secret",
      "VirtualHost": "/"
    },
    "ExchangeName": "audit.events",
    "RoutingKey": "audit.event"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyHere_MustBeAtLeast32Characters!",
    "Issuer": "okla-auth",
    "Audience": "okla-services"
  },
  "Services": {
    "VehiclesSaleService": "http://vehiclessaleservice:8080",
    "BillingService": "http://billingservice:8080",
    "AuditService": "http://auditservice:8080",
    "NotificationService": "http://notificationservice:8080"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "https://okla.com.do"]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "OpenTelemetry": {
    "ServiceName": "AdvertisingService",
    "Enabled": true
  }
}
