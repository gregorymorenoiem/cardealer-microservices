{
    "$comment": "Docker environment configuration - secrets are injected via Docker secrets/environment variables",
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/crmservice-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "fileSizeLimitBytes": 10485760,
                    "rollOnFileSizeLimit": true
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ]
    },
    "Database": {
        "Provider": "PostgreSQL",
        "ConnectionStrings": {
            "PostgreSQL": "Host=crmservice-db;Port=5432;Database=crmservice;Username=postgres;Password=;Pooling=true;Minimum Pool Size=5;Maximum Pool Size=20;",
            "SqlServer": "Server=localhost,1433;Database=crmservice;User Id=sa;Password=;TrustServerCertificate=True;MultipleActiveResultSets=true;",
            "Oracle": "User Id=CRMSERVICE;Password=;Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=XEPDB1)));Pooling=true;Min Pool Size=5;Max Pool Size=20;"
        },
        "AutoMigrate": true,
        "EnableSensitiveDataLogging": false,
        "CommandTimeout": 30
    },
    "AllowedHosts": "*",
    "Cors": {
        "AllowedOrigins": [
            "http://localhost:3000",
            "http://localhost:5173",
            "http://gateway:8080"
        ]
    },
    "ServiceDiscovery": {
        "Enabled": true,
        "Consul": {
            "Host": "consul",
            "Port": 8500
        },
        "ServiceName": "crmservice",
        "ServicePort": 80
    },
    "HealthCheck": {
        "Enabled": true,
        "Path": "/health",
        "Interval": 30
    }
}
