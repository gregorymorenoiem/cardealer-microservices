{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379,abortConnect=false,connectRetry=3,connectTimeout=5000",
    "PostgreSQL": "Host=localhost;Port=5432;Database=ratelimiting;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "RateLimiting": {
    "Enabled": true,
    "DefaultLimit": 100,
    "DefaultWindowSeconds": 60,
    "KeyPrefix": "ratelimit:",
    "ClientIdHeader": "X-API-Key",
    "UserTierHeader": "X-User-Tier",
    "UseIpAsFallback": true,
    "IncludeHeaders": true,
    "RateLimitExceededMessage": "Too many requests. Please try again later.",
    "ExcludedPaths": [
      "/health",
      "/swagger",
      "/api/ratelimit"
    ],
    "Policies": [
      {
        "Id": "api-default",
        "Name": "API Default",
        "Description": "Default rate limit policy for API endpoints",
        "Tier": 2,
        "WindowSeconds": 60,
        "MaxRequests": 100,
        "BurstLimit": 20,
        "Enabled": true,
        "Endpoints": ["/api/*"]
      }
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
