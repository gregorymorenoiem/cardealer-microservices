{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "$comment": "DEV-ONLY: This file contains local development settings. Production uses Docker secrets.",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "$comment": "DEV-ONLY: Use local Redis and PostgreSQL for development",
    "Redis": "",
    "PostgreSQL": ""
  },
  "RateLimiting": {
    "Enabled": true,
    "DefaultLimit": 100,
    "DefaultWindowSeconds": 60,
    "KeyPrefix": "ratelimit:",
    "ClientIdHeader": "X-API-Key",
    "UserTierHeader": "X-User-Tier",
    "UseIpAsFallback": true,
    "IncludeHeaders": true,
    "RateLimitExceededMessage": "Too many requests. Please try again later.",
    "ExcludedPaths": [
      "/health",
      "/swagger",
      "/api/ratelimit"
    ],
    "Policies": [
      {
        "Id": "api-default",
        "Name": "API Default",
        "Description": "Default rate limit policy for API endpoints",
        "Tier": 2,
        "WindowSeconds": 60,
        "MaxRequests": 100,
        "BurstLimit": 20,
        "Enabled": true,
        "Endpoints": ["/api/*"]
      }
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
