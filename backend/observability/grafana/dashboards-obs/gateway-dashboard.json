{
    "dashboard": {
        "id": null,
        "uid": "gateway-overview",
        "title": "API Gateway Dashboard",
        "tags": [
            "gateway",
            "ocelot",
            "api-gateway",
            "cardealer"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 1,
        "refresh": "10s",
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "annotations": {
            "list": []
        },
        "templating": {
            "list": [
                {
                    "name": "service",
                    "type": "query",
                    "datasource": "Prometheus",
                    "query": "label_values(http_server_request_duration_seconds_count, service_name)",
                    "refresh": 2,
                    "multi": true,
                    "includeAll": true
                }
            ]
        },
        "panels": [
            {
                "id": 1,
                "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
                "type": "stat",
                "title": "Gateway Status",
                "targets": [
                    {
                        "expr": "up{job=\"gateway\"}",
                        "legendFormat": "Gateway",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "background",
                    "graphMode": "none",
                    "textMode": "value"
                },
                "fieldConfig": {
                    "defaults": {
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "red" },
                                { "value": 1, "color": "green" }
                            ]
                        },
                        "mappings": [
                            { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } },
                            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } }
                        ]
                    }
                }
            },
            {
                "id": 2,
                "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
                "type": "stat",
                "title": "Request Rate (req/s)",
                "targets": [
                    {
                        "expr": "sum(rate(http_server_request_duration_seconds_count{service_name=\"Gateway\"}[5m]))",
                        "legendFormat": "Requests/sec",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "reqps",
                        "color": { "mode": "palette-classic" }
                    }
                }
            },
            {
                "id": 3,
                "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
                "type": "stat",
                "title": "Error Rate (%)",
                "targets": [
                    {
                        "expr": "sum(rate(http_server_request_duration_seconds_count{service_name=\"Gateway\", http_status_code=~\"5..\"}[5m])) / sum(rate(http_server_request_duration_seconds_count{service_name=\"Gateway\"}[5m])) * 100",
                        "legendFormat": "Error %",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 1, "color": "yellow" },
                                { "value": 5, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 4,
                "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
                "type": "stat",
                "title": "Avg Response Time",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le))",
                        "legendFormat": "p50",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 0.5, "color": "yellow" },
                                { "value": 1, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 5,
                "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
                "type": "stat",
                "title": "P95 Response Time",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le))",
                        "legendFormat": "p95",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 1, "color": "yellow" },
                                { "value": 2, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 6,
                "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
                "type": "stat",
                "title": "P99 Response Time",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le))",
                        "legendFormat": "p99",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 2, "color": "yellow" },
                                { "value": 5, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 7,
                "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
                "type": "timeseries",
                "title": "Request Rate by Status Code",
                "targets": [
                    {
                        "expr": "sum(rate(http_server_request_duration_seconds_count{service_name=\"Gateway\"}[5m])) by (http_status_code)",
                        "legendFormat": "{{http_status_code}}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "reqps",
                        "custom": {
                            "drawStyle": "line",
                            "lineWidth": 2,
                            "fillOpacity": 10
                        }
                    },
                    "overrides": [
                        {
                            "matcher": { "id": "byRegexp", "options": "2.." },
                            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
                        },
                        {
                            "matcher": { "id": "byRegexp", "options": "4.." },
                            "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }]
                        },
                        {
                            "matcher": { "id": "byRegexp", "options": "5.." },
                            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
                        }
                    ]
                }
            },
            {
                "id": 8,
                "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
                "type": "timeseries",
                "title": "Response Time Percentiles",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le))",
                        "legendFormat": "p50",
                        "refId": "A"
                    },
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le))",
                        "legendFormat": "p95",
                        "refId": "B"
                    },
                    {
                        "expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le))",
                        "legendFormat": "p99",
                        "refId": "C"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "custom": {
                            "drawStyle": "line",
                            "lineWidth": 2,
                            "fillOpacity": 10
                        }
                    }
                }
            },
            {
                "id": 9,
                "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
                "type": "timeseries",
                "title": "Downstream Service Calls",
                "targets": [
                    {
                        "expr": "sum(rate(http_client_request_duration_seconds_count{service_name=\"Gateway\"}[5m])) by (http_route)",
                        "legendFormat": "{{http_route}}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "reqps",
                        "custom": {
                            "drawStyle": "bars",
                            "fillOpacity": 80
                        }
                    }
                }
            },
            {
                "id": 10,
                "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
                "type": "timeseries",
                "title": "Downstream Response Times by Service",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(http_client_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le, http_route))",
                        "legendFormat": "{{http_route}} p95",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "custom": {
                            "drawStyle": "line",
                            "lineWidth": 2
                        }
                    }
                }
            },
            {
                "id": 11,
                "gridPos": { "h": 6, "w": 8, "x": 0, "y": 20 },
                "type": "gauge",
                "title": "Active Connections",
                "targets": [
                    {
                        "expr": "sum(http_server_active_requests{service_name=\"Gateway\"})",
                        "legendFormat": "Active",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 100, "color": "yellow" },
                                { "value": 500, "color": "red" }
                            ]
                        },
                        "max": 1000
                    }
                }
            },
            {
                "id": 12,
                "gridPos": { "h": 6, "w": 8, "x": 8, "y": 20 },
                "type": "piechart",
                "title": "Requests by Route",
                "targets": [
                    {
                        "expr": "sum(increase(http_server_request_duration_seconds_count{service_name=\"Gateway\"}[1h])) by (http_route)",
                        "legendFormat": "{{http_route}}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "legend": {
                        "displayMode": "table",
                        "placement": "right"
                    }
                }
            },
            {
                "id": 13,
                "gridPos": { "h": 6, "w": 8, "x": 16, "y": 20 },
                "type": "table",
                "title": "Top 10 Slowest Endpoints",
                "targets": [
                    {
                        "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{service_name=\"Gateway\"}[5m])) by (le, http_route)))",
                        "legendFormat": "{{http_route}}",
                        "refId": "A",
                        "format": "table",
                        "instant": true
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s"
                    }
                },
                "options": {
                    "showHeader": true
                },
                "transformations": [
                    {
                        "id": "organize",
                        "options": {
                            "excludeByName": { "Time": true },
                            "renameByName": { "Value": "P95 (s)", "http_route": "Endpoint" }
                        }
                    }
                ]
            }
        ]
    },
    "folderId": 0,
    "overwrite": true
}
