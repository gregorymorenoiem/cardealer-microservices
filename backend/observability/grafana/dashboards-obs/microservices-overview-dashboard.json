            {
                "id": 10,
                "gridPos": { "h": 8, "w": 8, "x": 0, "y": 7 },
                "type": "timeseries",
                "title": "Request Rate by Service",
                "targets": [
                    {
                        "expr": "sum(rate(http_server_request_duration_seconds_count[5m])) by (service_name)",
                        "legendFormat": "{{service_name}}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "reqps",
                        "custom": {
                            "drawStyle": "line",
                            "lineWidth": 2,
                            "fillOpacity": 20
                        }
                    }
                }
            },
            {
                "id": 11,
                "gridPos": { "h": 8, "w": 8, "x": 8, "y": 7 },
                "type": "timeseries",
                "title": "Error Rate by Service",
                "targets": [
                    {
                        "expr": "sum(rate(http_server_request_duration_seconds_count{http_status_code=~\"5..\"}[5m])) by (service_name) / sum(rate(http_server_request_duration_seconds_count[5m])) by (service_name) * 100",
                        "legendFormat": "{{service_name}}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "min": 0,
                        "custom": {
                            "drawStyle": "line",
                            "lineWidth": 2
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 1, "color": "yellow" },
                                { "value": 5, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 12,
                "gridPos": { "h": 8, "w": 8, "x": 16, "y": 7 },
                "type": "timeseries",
                "title": "Response Time P95 by Service",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le, service_name))",
                        "legendFormat": "{{service_name}}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "custom": {
                            "drawStyle": "line",
                            "lineWidth": 2
                        }
                    }
                }
            },
            {
                "id": 13,
                "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
                "type": "heatmap",
                "title": "Request Duration Heatmap",
                "targets": [
                    {
                        "expr": "sum(increase(http_server_request_duration_seconds_bucket[1m])) by (le)",
                        "legendFormat": "{{le}}",
                        "refId": "A",
                        "format": "heatmap"
                    }
                ],
                "options": {
                    "calculate": false,
                    "cellGap": 1,
                    "color": {
                        "scheme": "Oranges"
                    }
                }
            },
            {
                "id": 14,
                "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
                "type": "table",
                "title": "Service Health Summary",
                "targets": [
                    {
                        "expr": "up",
                        "refId": "A",
                        "format": "table",
                        "instant": true
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "custom": {
                            "displayMode": "color-background"
                        },
                        "thresholds": {
                            "steps": [
                                { "value": 0, "color": "red" },
                                { "value": 1, "color": "green" }
                            ]
                        },
                        "mappings": [
                            { "type": "value", "options": { "1": { "text": "Healthy" } } },
                            { "type": "value", "options": { "0": { "text": "Unhealthy" } } }
                        ]
                    }
                },
                "options": {
                    "showHeader": true
                },
                "transformations": [
                    {
                        "id": "organize",
                        "options": {
                            "excludeByName": { "Time": true, "__name__": true },
                            "renameByName": { "job": "Service", "Value": "Status", "instance": "Instance" }
                        }
                    }
                ]
            },
            {
                "id": 15,
                "gridPos": { "h": 6, "w": 6, "x": 0, "y": 23 },
                "type": "stat",
                "title": "Total Requests (1h)",
                "targets": [
                    {
                        "expr": "sum(increase(http_server_request_duration_seconds_count[1h]))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": { "mode": "palette-classic" }
                    }
                }
            },
            {
                "id": 16,
                "gridPos": { "h": 6, "w": 6, "x": 6, "y": 23 },
                "type": "stat",
                "title": "Total Errors (1h)",
                "targets": [
                    {
                        "expr": "sum(increase(http_server_request_duration_seconds_count{http_status_code=~\"5..\"}[1h]))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": { "mode": "thresholds" },
                        "thresholds": {
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 10, "color": "yellow" },
                                { "value": 100, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 17,
                "gridPos": { "h": 6, "w": 6, "x": 12, "y": 23 },
                "type": "stat",
                "title": "Avg Response Time",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "color": { "mode": "thresholds" },
                        "thresholds": {
                            "steps": [
                                { "value": 0, "color": "green" },
                                { "value": 0.5, "color": "yellow" },
                                { "value": 1, "color": "red" }
                            ]
                        }
                    }
                }
            },
            {
                "id": 18,
                "gridPos": { "h": 6, "w": 6, "x": 18, "y": 23 },
                "type": "stat",
                "title": "Services Online",
                "targets": [
                    {
                        "expr": "count(up == 1)",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": { "mode": "thresholds" },
                        "thresholds": {
                            "steps": [
                                { "value": 0, "color": "red" },
                                { "value": 5, "color": "yellow" },
                                { "value": 8, "color": "green" }
                            ]
                        }
                    }
                }
            }
        ]
    },
