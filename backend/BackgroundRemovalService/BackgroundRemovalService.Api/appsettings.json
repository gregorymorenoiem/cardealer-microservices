{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:5080",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=backgroundremovalservice;Username=postgres;Password=postgres"
  },

  "Auth": {
    "Authority": "http://localhost:5000",
    "Audience": "background-removal-api"
  },

  "Secrets": {
    "ClipDrop": {
      "ApiKey": ""
    },
    "RemoveBg": {
      "ApiKey": ""
    },
    "Photoroom": {
      "ApiKey": ""
    },
    "Slazzer": {
      "ApiKey": ""
    },
    "S3": {
      "AccessKey": "",
      "SecretKey": ""
    }
  },

  "BackgroundRemoval": {
    "DefaultProvider": "ClipDrop",
    "FallbackProviders": ["RemoveBg", "Photoroom", "Slazzer"],
    "EnableFallback": true,
    "MaxRetries": 3,
    "Providers": {
      "ClipDrop": {
        "BaseUrl": "https://clipdrop-api.co",
        "TimeoutSeconds": 60,
        "CostPerImageUsd": 0.05,
        "IsDefault": true,
        "Priority": 0
      },
      "RemoveBg": {
        "BaseUrl": "https://api.remove.bg/v1.0",
        "TimeoutSeconds": 60,
        "CostPerImageUsd": 0.2,
        "IsDefault": false,
        "Priority": 1
      },
      "Photoroom": {
        "BaseUrl": "https://sdk.photoroom.com/v1",
        "TimeoutSeconds": 60,
        "CostPerImageUsd": 0.05,
        "IsDefault": false,
        "Priority": 2
      },
      "Slazzer": {
        "BaseUrl": "https://api.slazzer.com/v2.0",
        "TimeoutSeconds": 60,
        "CostPerImageUsd": 0.02,
        "IsDefault": false,
        "Priority": 3
      }
    }
  },

  "Storage": {
    "S3": {
      "BucketName": "cardealer-media",
      "Region": "us-east-1",
      "BaseUrl": "",
      "UseLocalPath": true,
      "LocalPath": "./media-files"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [{ "Name": "Console" }],
    "Enrich": ["FromLogContext", "WithSpan"]
  }
}
