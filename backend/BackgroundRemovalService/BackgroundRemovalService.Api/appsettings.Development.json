{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },

  "Secrets": {
    "ClipDrop": {
      "ApiKey": "${CLIPDROP_API_KEY}"
    },
    "RemoveBg": {
      "ApiKey": "${REMOVEBG_API_KEY}"
    },
    "Photoroom": {
      "ApiKey": "${PHOTOROOM_API_KEY}"
    },
    "Slazzer": {
      "ApiKey": "${SLAZZER_API_KEY}"
    },
    "S3": {
      "AccessKey": "${AWS_ACCESS_KEY_ID}",
      "SecretKey": "${AWS_SECRET_ACCESS_KEY}"
    }
  },

  "BackgroundRemoval": {
    "DefaultProvider": "ClipDrop",
    "FallbackProviders": ["RemoveBg", "Photoroom", "Slazzer"],
    "EnableFallback": true
  },

  "Storage": {
    "S3": {
      "UseLocalPath": true,
      "LocalPath": "./media-files"
    }
  }
}
