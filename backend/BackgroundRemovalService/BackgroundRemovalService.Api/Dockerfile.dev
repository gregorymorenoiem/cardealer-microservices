FROM mcr.microsoft.com/dotnet/sdk:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

# Capa de build para desarrollo con hot-reload
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copiar archivos de proyecto para restore
COPY ["BackgroundRemovalService/BackgroundRemovalService.Api/BackgroundRemovalService.Api.csproj", "BackgroundRemovalService/BackgroundRemovalService.Api/"]
COPY ["BackgroundRemovalService/BackgroundRemovalService.Application/BackgroundRemovalService.Application.csproj", "BackgroundRemovalService/BackgroundRemovalService.Application/"]
COPY ["BackgroundRemovalService/BackgroundRemovalService.Domain/BackgroundRemovalService.Domain.csproj", "BackgroundRemovalService/BackgroundRemovalService.Domain/"]
COPY ["BackgroundRemovalService/BackgroundRemovalService.Infrastructure/BackgroundRemovalService.Infrastructure.csproj", "BackgroundRemovalService/BackgroundRemovalService.Infrastructure/"]
COPY ["_Shared/CarDealer.Contracts/CarDealer.Contracts.csproj", "_Shared/CarDealer.Contracts/"]
COPY ["_Shared/CarDealer.Shared/CarDealer.Shared.csproj", "_Shared/CarDealer.Shared/"]

# Restore de dependencias
RUN dotnet restore "BackgroundRemovalService/BackgroundRemovalService.Api/BackgroundRemovalService.Api.csproj"

# Copiar todo el c√≥digo fuente
COPY . .

# Desarrollo con hot-reload
WORKDIR "/src/BackgroundRemovalService/BackgroundRemovalService.Api"
ENTRYPOINT ["dotnet", "watch", "run", "--no-launch-profile", "--urls", "http://+:80"]
