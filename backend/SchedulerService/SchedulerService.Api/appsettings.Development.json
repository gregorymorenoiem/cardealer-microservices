{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=schedulerservice;Username=postgres;Password=postgres"
  },
  "Hangfire": {
    "ServerName": "SchedulerService-Dev",
    "WorkerCount": 2,
    "DashboardPath": "/hangfire",
    "DashboardTitle": "Scheduler Service Dashboard (Development)"
  },
  "JobSettings": {
    "CleanupOldExecutions": {
      "RetentionDays": 7,
      "CronExpression": "0 */6 * * *"
    },
    "DailyStatsReport": {
      "CronExpression": "0 */2 * * *"
    },
    "HealthCheck": {
      "CronExpression": "*/1 * * * *"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Hangfire": "Debug"
    }
  }
}
