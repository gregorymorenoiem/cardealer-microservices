{
  "$comment": "Development-only configuration. For Docker/Production, use appsettings.Docker.json with secrets injected via environment variables or Docker secrets.",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=contactservice;Username=postgres;Password=${POSTGRES_PASSWORD}"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "AuthService-Dev",
    "Audience": "OKLA-Dev"
  },
  "Service": {
    "Name": "ContactService",
    "Host": "localhost",
    "Port": "5007",
    "HealthCheckUrl": "http://localhost:5007/health"
  },
  "Consul": {
    "Address": "http://localhost:8500"
  }
}
