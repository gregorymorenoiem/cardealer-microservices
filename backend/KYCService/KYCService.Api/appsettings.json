{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=kycservice;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Key": "your-super-secret-key-here-minimum-32-characters",
    "Issuer": "CarDealer",
    "Audience": "CarDealer"
  },

  "JCEService": {
    "SimulationEnabled": true,
    "ExternalValidationEnabled": false,
    "ApiBaseUrl": "",
    "ApiKey": "",
    "ThirdPartyService": "",
    "ThirdPartyApiKey": "",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "CacheExpirationMinutes": 60,
    "Comments": {
      "SimulationEnabled": "true para desarrollo, false para producción",
      "ExternalValidationEnabled": "true para usar servicio externo (JCE directo o tercero)",
      "ThirdPartyService": "FortunaRD, InfoRD, etc. - Servicios que proveen validación de cédula"
    }
  },

  "OCRService": {
    "UseSimulation": true,
    "TessDataPath": "/usr/share/tesseract-ocr/4.00/tessdata",
    "Languages": "spa",
    "MinConfidenceScore": 70,
    "EnablePreprocessing": true,
    "MaxFileSizeMB": 10,
    "SupportedFormats": ["jpg", "jpeg", "png", "bmp", "tiff", "pdf"],
    "Comments": {
      "TessDataPath": "Ruta a los archivos de idioma de Tesseract (tessdata)",
      "Languages": "spa para español, spa+eng para español e inglés"
    }
  },

  "FaceComparison": {
    "UseSimulation": true,
    "UseAmazonRekognition": false,
    "UseAzureFaceApi": false,
    "AzureEndpoint": "",
    "AzureApiKey": "",
    "MatchThreshold": 80,
    "LivenessThreshold": 70,
    "MinimumLivenessChallenges": 2,
    "MaxProcessingTimeSeconds": 30,
    "Comments": {
      "UseSimulation": "true para desarrollo/tests, false para producción",
      "UseAmazonRekognition": "RECOMENDADO: true para producción (~$0.001/imagen)",
      "UseAzureFaceApi": "Alternativa más cara, solo como fallback",
      "MatchThreshold": "Porcentaje mínimo para considerar coincidencia (0-100)",
      "LivenessThreshold": "Porcentaje mínimo para considerar liveness válido (0-100)"
    }
  },

  "AmazonRekognition": {
    "Region": "us-east-1",
    "AccessKeyId": "",
    "SecretAccessKey": "",
    "SimilarityThreshold": 80,
    "MinImageQuality": 40,
    "FaceAttributes": ["ALL"],
    "Comments": {
      "Region": "Región AWS (us-east-1 recomendado)",
      "AccessKeyId": "Dejar vacío para usar IAM Role, credenciales de ambiente o perfil AWS",
      "SecretAccessKey": "Dejar vacío para usar IAM Role, credenciales de ambiente o perfil AWS",
      "SimilarityThreshold": "Umbral de similitud para considerar match (0-100)",
      "CostEstimate": "~$0.001/imagen, ~$2-4/mes para 1000 verificaciones KYC"
    }
  },

  "KYCSettings": {
    "MaxVerificationAttempts": 3,
    "VerificationTimeoutMinutes": 30,
    "DocumentExpirationDays": 365,
    "RequireLivenessCheck": true,
    "RequireJCEValidation": true,
    "AllowManualOverride": true,
    "AutoApproveHighConfidence": false,
    "HighConfidenceThreshold": 95,
    "NotifyOnVerificationComplete": true,
    "NotifyOnVerificationFailed": true,
    "RetainDocumentsMonths": 60
  }
}
