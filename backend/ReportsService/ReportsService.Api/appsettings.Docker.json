{
  "$comment": "Docker environment configuration - secrets are loaded from /run/secrets/",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Database": {
    "Provider": "PostgreSQL",
    "Host": "postgres",
    "Port": 5432,
    "Database": "reportsservice",
    "Username": "",
    "Password": "",
    "AutoMigrate": true
  },
  "ServiceDiscovery": {
    "Consul": {
      "Host": "consul",
      "Port": 8500,
      "ServiceName": "reportsservice",
      "ServicePort": 80
    }
  },
  "RabbitMQ": {
    "Host": "rabbitmq",
    "Port": 5672,
    "Username": "",
    "Password": "",
    "VirtualHost": "/"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
