{
    "$comment": "DEV-ONLY: Secrets are empty - use Docker secrets or environment variables in production",
    "Logging":  {
                    "LogLevel":  {
                                     "Default":  "Information",
                                     "Microsoft.AspNetCore":  "Warning"
                                 }
                },
    "AllowedHosts":  "*",
    "Database":  {
                     "Provider":  "PostgreSQL",
                     "ConnectionStrings":  {
                                               "PostgreSQL":  "",
                                               "SqlServer":  "",
                                               "Oracle":  ""
                                           },
                     "AutoMigrate":  false,
                     "CommandTimeout":  30,
                     "MaxRetryCount":  3,
                     "MaxRetryDelay":  30,
                     "EnableSensitiveDataLogging":  false,
                     "EnableDetailedErrors":  false
                 },
    "RateLimiting":  {
                         "Enabled":  true,
                         "MaxRequests":  100,
                         "WindowSeconds":  60,
                         "EnableLogging":  true,
                         "WhitelistedIps":  [
                                                "127.0.0.1",
                                                "::1"
                                            ]
                     },
    "ElasticSearch":  {
                          "ConnectionString":  "http://localhost:9200",
                          "DefaultIndex":  "Roles",
                          "Enable":  false
                      },
    "RabbitMQ":  {
                     "HostName":  "localhost",
                     "Port":  "5672",
                     "UserName":  "",
                     "Password":  "",
                     "VirtualHost":  "/",
                     "ExchangeName":  "cardealer.events"
                 },
    "UserService":  {
                        "QueueName":  "error-queue",
                        "ExchangeName":  "error-exchange",
                        "RoutingKey":  "error.routing.key"
                    },
    "Jwt":  {
                "Issuer":  "",
                "Audience":  "",
                "Key":  "",
                "ExpirationMinutes":  60,
                "ValidateIssuer":  true,
                "ValidateAudience":  true,
                "ValidateLifetime":  true,
                "ValidateIssuerSigningKey":  true
            },
    "ServiceUrls":  {
                        "RoleService":  "https://localhost:45952",
                        "AuditService":  "https://localhost:7287",
                        "NotificationService":  "https://localhost:45954",
                        "ErrorService":  "https://localhost:45952"
                    },
    "Service":  {
                    "Name":  "UserService",
                    "Host":  "localhost",
                    "Port":  "5000",
                    "HealthCheckUrl":  "http://localhost:5000/health"
                },
    "Consul":  {
                   "Address":  "http://localhost:8500"
               },
    "OpenTelemetry":  {
                          "ServiceName":  "UserService",
                          "Exporter":  {
                                           "Otlp":  {
                                                        "Protocol":  "HttpProtobuf",
                                                        "Endpoint":  "http://otel-collector:4318"
                                                    }
                                       },
                          "Tracing":  {
                                          "MaxExportBatchSize":  512,
                                          "SamplingRatio":  0.1,
                                          "ExportIntervalMilliseconds":  5000,
                                          "MaxQueueSize":  2048,
                                          "Enabled":  true
                                      },
                          "OtlpEndpoint":  "http://otel-collector:4318",
                          "Metrics":  {
                                          "MaxExportBatchSize":  512,
                                          "MaxQueueSize":  2048,
                                          "ExportIntervalMilliseconds":  60000,
                                          "Enabled":  true
                                      },
                          "Resources":  {
                                            "service.namespace":  "cardealer",
                                            "service.name":  "UserService",
                                            "deployment.environment":  "development",
                                            "service.version":  "1.0.0"
                                        }
                      }
}
