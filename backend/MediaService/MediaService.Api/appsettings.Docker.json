{
  "$comment": "Docker environment configuration - NO SECRETS. Secrets are injected via Docker secrets or environment variables",
  "Database": {
    "Provider": "PostgreSQL",
    "ConnectionStrings": {
      "$comment": "Connection strings are built dynamically from Docker secrets in production",
      "PostgreSQL": "",
      "SqlServer": "",
      "Oracle": ""
    },
    "AutoMigrate": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Service": {
    "Name": "MediaService",
    "Host": "mediaservice",
    "Port": "80",
    "HealthCheckUrl": "http://mediaservice/health"
  },
  "Consul": {
    "Address": "http://consul:8500"
  },
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "VirtualHost": "/",
    "MediaEventsExchange": "media.events",
    "MediaCommandsExchange": "media.commands",
    "MediaUploadedQueue": "media.uploaded.queue",
    "MediaProcessedQueue": "media.processed.queue",
    "MediaDeletedQueue": "media.deleted.queue",
    "ProcessMediaQueue": "process.media.queue",
    "MediaUploadedRoutingKey": "media.uploaded",
    "MediaProcessedRoutingKey": "media.processed",
    "MediaDeletedRoutingKey": "media.deleted",
    "ProcessMediaRoutingKey": "media.process"
  },
  "OpenTelemetry": {
    "ServiceName": "MediaService",
    "Exporter": {
      "Otlp": {
        "Protocol": "HttpProtobuf",
        "Endpoint": "http://otel-collector:4318"
      }
    },
    "Tracing": {
      "MaxExportBatchSize": 512,
      "SamplingRatio": 0.1,
      "ExportIntervalMilliseconds": 5000,
      "MaxQueueSize": 2048,
      "Enabled": true
    },
    "OtlpEndpoint": "http://otel-collector:4318",
    "Metrics": {
      "MaxExportBatchSize": 512,
      "MaxQueueSize": 2048,
      "ExportIntervalMilliseconds": 60000,
      "Enabled": true
    },
    "Resources": {
      "service.namespace": "cardealer",
      "service.name": "MediaService",
      "deployment.environment": "docker",
      "service.version": "1.0.0"
    }
  }
}
