{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "Provider": "PostgreSQL",
    "AutoMigrate": true,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "RateLimiting": {
    "Enabled": true,
    "MaxRequests": 100,
    "WindowSeconds": 60,
    "EnableLogging": true,
    "WhitelistedIps": []
  },
  "ElasticSearch": {
    "DefaultIndex": "errorlogs",
    "Enable": false
  },
  "RabbitMQ": {
    "ExchangeName": "cardealer.events"
  },
  "ErrorService": {
    "QueueName": "error-queue",
    "ExchangeName": "error-exchange",
    "RoutingKey": "error.routing.key"
  },
  "Jwt": {
    "ExpirationMinutes": 60,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Service": {
    "Name": "ErrorService",
    "Port": "80"
  },
  "Consul": {
    "Enabled": false
  },
  "OpenTelemetry": {
    "ServiceName": "ErrorService",
    "Exporter": {
      "Otlp": {
        "Protocol": "HttpProtobuf",
        "Endpoint": "http://otel-collector:4318"
      }
    },
    "Tracing": {
      "MaxExportBatchSize": 512,
      "SamplingRatio": 0.1,
      "ExportIntervalMilliseconds": 5000,
      "MaxQueueSize": 2048,
      "Enabled": true
    },
    "Metrics": {
      "MaxExportBatchSize": 512,
      "MaxQueueSize": 2048,
      "ExportIntervalMilliseconds": 60000,
      "Enabled": true
    },
    "Resources": {
      "service.namespace": "cardealer",
      "service.name": "ErrorService",
      "deployment.environment": "production",
      "service.version": "1.0.0"
    }
  }
}
