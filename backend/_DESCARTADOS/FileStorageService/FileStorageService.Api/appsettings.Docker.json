{
  "$comment": "Docker environment configuration - NO secrets here. Secrets are injected via Docker secrets or environment variables.",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "Storage": {
    "ProviderType": "Local",
    "BasePath": "/app/uploads",
    "ContainerName": "files",
    "CdnBaseUrl": "",
    "MaxFileSizeBytes": 104857600,
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/webp",
      "video/mp4",
      "video/webm",
      "application/pdf",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/vnd.ms-excel",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
      "text/plain",
      "text/csv"
    ],
    "PresignedUrlExpirationMinutes": 60,
    "EnableVirusScan": false,
    "EnableMetadataExtraction": true,
    "EnableImageOptimization": true,
    "Region": ""
  },
  "FFmpeg": {
    "FFmpegPath": "/usr/bin/ffmpeg",
    "FFprobePath": "/usr/bin/ffprobe",
    "WorkingDirectory": "/tmp",
    "TimeoutSeconds": 300,
    "EnableHardwareAcceleration": false
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5012"
      }
    }
  },
  "Service": {
    "Name": "FileStorageService",
    "Port": "5012"
  },
  "Consul": {
    "Enabled": false
  },
  "OpenTelemetry": {
    "ServiceName": "FileStorageService",
    "Exporter": {
      "Otlp": {
        "Protocol": "HttpProtobuf",
        "Endpoint": "http://otel-collector:4318"
      }
    },
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 0.1
    },
    "Metrics": {
      "Enabled": true
    }
  },
  "HealthChecks": {
    "Storage": {
      "Enabled": true
    }
  }
}
