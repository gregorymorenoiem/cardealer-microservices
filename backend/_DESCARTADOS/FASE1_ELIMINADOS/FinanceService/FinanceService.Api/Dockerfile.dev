FROM mcr.microsoft.com/dotnet/sdk:8.0 AS base
WORKDIR /src

# Copy all code
COPY . .

# Restore dependencies
RUN dotnet restore "FinanceService/FinanceService.Api/FinanceService.Api.csproj"

# Set working directory to Api project
WORKDIR /src/FinanceService/FinanceService.Api

# Expose ports
EXPOSE 80 4022

# Run directly without watch mode (hot reload disabled for stability)
ENTRYPOINT ["dotnet", "run", "--no-launch-profile", "--urls", "http://+:80"]
