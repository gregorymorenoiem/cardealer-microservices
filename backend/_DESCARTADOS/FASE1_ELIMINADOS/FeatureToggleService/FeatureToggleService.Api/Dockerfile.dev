FROM mcr.microsoft.com/dotnet/sdk:8.0 AS base
WORKDIR /src

# Copy all source code
COPY . .

# Restore dependencies
RUN dotnet restore "FeatureToggleService/FeatureToggleService.Api/FeatureToggleService.Api.csproj"

# Build the project in Release mode
RUN dotnet build "FeatureToggleService/FeatureToggleService.Api/FeatureToggleService.Api.csproj" -c Release -o /app/build --no-restore

# Set working directory to output folder
WORKDIR /app/build

# Expose port 80
EXPOSE 80

# Run the precompiled DLL directly (avoids dotnet run blocking issues)
ENTRYPOINT ["dotnet", "FeatureToggleService.Api.dll"]
