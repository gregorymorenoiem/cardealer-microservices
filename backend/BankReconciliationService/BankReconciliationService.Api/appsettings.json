{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=bankreconciliation;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-here-minimum-32-characters-for-security",
    "Issuer": "BankReconciliationService",
    "Audience": "BankReconciliationServiceUsers",
    "ExpirationMinutes": 60
  },
  "BankApiSettings": {
    "BancoPopular": {
      "BaseUrl": "https://api.popularenlinea.com",
      "ClientId": "your-client-id",
      "ClientSecret": "your-client-secret",
      "Enabled": true
    },
    "Banreservas": {
      "BaseUrl": "https://api.banreservas.com",
      "ApiKey": "your-api-key",
      "Enabled": true
    },
    "BHDLeon": {
      "BaseUrl": "https://openbanking.bhdleon.com.do",
      "ClientId": "your-client-id",
      "ClientSecret": "your-client-secret",
      "Enabled": true
    },
    "Scotiabank": {
      "BaseUrl": "https://api.scotiabank.com.do",
      "CertificatePath": "/path/to/certificate.pfx",
      "CertificatePassword": "certificate-password",
      "Enabled": true
    }
  },
  "ReconciliationSettings": {
    "AutoReconcileEnabled": true,
    "MatchConfidenceThreshold": 85.0,
    "MaxSuggestionsPerLine": 5,
    "DateToleranceDays": 2,
    "AmountToleranceDollars": 1.0
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "noreply@okla.com.do",
    "SmtpPassword": "your-email-password",
    "FromEmail": "noreply@okla.com.do",
    "FromName": "OKLA Bank Reconciliation"
  }
}
