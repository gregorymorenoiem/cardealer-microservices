FROM mcr.microsoft.com/dotnet/sdk:8.0

# Install dotnet-watch and debugger
RUN dotnet tool install --global dotnet-watch \
    && export PATH="$PATH:/root/.dotnet/tools" \
    && apt-get update \
    && apt-get install -y unzip curl \
    && curl -sSL https://aka.ms/getvsdbgsh | bash /dev/stdin -v latest -l /vsdbg

WORKDIR /app

# Copy project files - EventTrackingService
COPY EventTrackingService/EventTrackingService.Api/EventTrackingService.Api.csproj ./EventTrackingService/EventTrackingService.Api/
COPY EventTrackingService/EventTrackingService.Application/EventTrackingService.Application.csproj ./EventTrackingService/EventTrackingService.Application/
COPY EventTrackingService/EventTrackingService.Domain/EventTrackingService.Domain.csproj ./EventTrackingService/EventTrackingService.Domain/
COPY EventTrackingService/EventTrackingService.Infrastructure/EventTrackingService.Infrastructure.csproj ./EventTrackingService/EventTrackingService.Infrastructure/

# Copy shared project files
COPY _Shared/CarDealer.Contracts/*.csproj ./_Shared/CarDealer.Contracts/
COPY _Shared/CarDealer.Shared/*.csproj ./_Shared/CarDealer.Shared/

# Restore packages
RUN dotnet restore "EventTrackingService/EventTrackingService.Api/EventTrackingService.Api.csproj"

# Copy all source code
COPY . .

# Development environment variables
ENV ASPNETCORE_ENVIRONMENT=Development \
    ASPNETCORE_URLS="http://+:80" \
    DOTNET_MSBUILD_CONFIGURATION=Debug \
    DOTNET_BUILD_CONFIGURATION=Debug \
    DOTNET_USE_POLLING_FILE_WATCHER=true \
    NUGET_XMLDOC_MODE=none

WORKDIR /app/EventTrackingService/EventTrackingService.Api

# Start with watch mode for hot reload
CMD ["dotnet", "watch", "run", "--no-launch-profile"]
